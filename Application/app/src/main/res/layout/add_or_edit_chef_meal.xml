<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/mealInfoScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/mealInfoTextInputsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addOrEditChefMealTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Add Dish" />

            <EditText
                android:id="@+id/mealNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:hint="Meal Name"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/mealTypeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:hint="Type"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/mealCuisineEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:hint="Cuisine"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/mealIngredientsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:hint="Ingredients"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <LinearLayout
                android:id="@+id/mealIngredientsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/mealAllergensEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:hint="Allergens"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <LinearLayout
                android:id="@+id/mealAllergensList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/mealPriceEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:hint="Price"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/mealDescriptionEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:hint="Description"
                android:inputType="textPersonName"
                android:minWidth="200dp"
                android:minHeight="50dp" />

            <TextView
                android:id="@+id/addOrEditMealErrorMessagesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:textColor="#FF0000" />

            <Button
                android:id="@+id/addOrEditMealBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Finish Adding" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>